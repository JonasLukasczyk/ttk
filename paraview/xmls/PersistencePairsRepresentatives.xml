<?xml version="1.0" encoding="UTF-8"?>
<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy name="PersistencePairsRepresentatives" class="ttkPersistencePairsRepresentatives" label="TTK PersistencePairsRepresentatives">
      <Documentation long_help="TTK persistencePairsRepresentatives" short_help="TTK persistencePairsRepresentatives">
        This filter consumes an embedded persistence diagram (vtkUnstructuredGrid) and computes the 3D point representative for each persistence pair.
      </Documentation>

      <InputProperty name="Persistence Diagram" command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources" />
          <Group name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkUnstructuredGrid" />
        </DataTypeDomain>
        <Documentation>A ttkPersistenceDiagram.</Documentation>
      </InputProperty>

      <OutputPort index="0" id="port0" name="Representatives" />

      ${DEBUG_WIDGETS}

      <Hints>
        <ShowInMenu category="TTK - Scalar Data" />
      </Hints>
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
