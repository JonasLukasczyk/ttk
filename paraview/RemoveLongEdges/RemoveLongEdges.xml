<?xml version="1.0" encoding="UTF-8"?>
<ServerManagerConfiguration>
    <ProxyGroup name="filters">
        <SourceProxy name="RemoveLongEdges" class="ttkRemoveLongEdges" label="TTK RemoveLongEdges">
            <Documentation long_help="TODO" short_help="TODO">
                TODO
            </Documentation>

            <InputProperty name="Object" port_index="0" command="SetInputConnection">
                <ProxyGroupDomain name="groups">
                    <Group name="sources" />
                    <Group name="filters" />
                </ProxyGroupDomain>
                <DataTypeDomain name="input_type">
                    <DataType value="vtkUnstructuredGrid" />
                </DataTypeDomain>
                <Documentation>Road network that will be revised to remove long edges.</Documentation>
            </InputProperty>

            <DoubleVectorProperty name="EdgeDistanceThreshold" label="EdgeDistanceThreshold(m)" command="SetEdgeDistanceThreshold" number_of_elements="1" default_values="1000">
                <Documentation>This parameter controls the maximum distance of roads(edges in the road network).</Documentation>
            </DoubleVectorProperty>

            <PropertyGroup panel_widget="Line" label="Input Parameters">
                <Property name="EdgeDistanceThreshold" />
            </PropertyGroup>

            ${DEBUG_WIDGETS}

            <Hints>
                <ShowInMenu category="TTK" />
            </Hints>
        </SourceProxy>
    </ProxyGroup>
</ServerManagerConfiguration>
