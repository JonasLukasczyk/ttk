
<ServerManagerConfiguration>
  <!-- This is the server manager configuration XML. It defines the interface to
       our new filter. As a rule of thumb, try to locate the configuration for
       a filter already in ParaView (in Servers/ServerManager/Resources/*.xml)
       that matches your filter and then model your xml on it -->
  <ProxyGroup name="filters">
   <SourceProxy
     name="ScalarFieldNormalizer"
     class="ttkScalarFieldNormalizer"
     label="TTK ScalarFieldNormalizer">
     <Documentation
        long_help="TTK plugin that normalizes an input scalar field."
        short_help="TTK plugin that normalizes an input scalar field.">
          TTK plugin that normalizes an input scalar field.
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet"/>
        </DataTypeDomain>
        <InputArrayDomain name="input_array" attribute_type="any" number_of_components="1"/>
        <Documentation>
          Data-set to normalize.
        </Documentation>
      </InputProperty>

      <StringVectorProperty name="ScalarField" label="Scalar Field" command="SetInputArrayToProcess" element_types="0 0 0 0 2" number_of_elements="5">
        <ArrayListDomain name="array_list" number_of_components="1">
          <RequiredProperties>
            <Property name="Input" function="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>Scalar field to process.</Documentation>
      </StringVectorProperty>

      <PropertyGroup panel_widget="Line" label="Input options">
        <Property name="ScalarField" />
      </PropertyGroup>

      ${DEBUG_WIDGETS}

      <Hints>
        <ShowInMenu category="TTK - Scalar Data" />
      </Hints>
   </SourceProxy>
 </ProxyGroup>
</ServerManagerConfiguration>
