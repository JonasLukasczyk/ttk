
<ServerManagerConfiguration>
  <!-- This is the server manager configuration XML. It defines the interface to
       our new filter. As a rule of thumb, try to locate the configuration for
       a filter already in ParaView (in Servers/ServerManager/Resources/*.xml)
       that matches your filter and then model your xml on it -->
  <ProxyGroup name="filters">
   <SourceProxy
     name="ProjectionFromField"
     class="ttkProjectionFromField"
     label="TTK ProjectionFromField">
     <Documentation
        long_help="TTK plugin which projects a data-set to 2D given two
point-data scalar fields to be used as 2D coordinates."
        short_help="TTK plugin which projects a data-set to 2D given two
point-data scalar fields to be used as 2D coordinates.">
         TTK plugin which projects a data-set to 2D given two
point-data scalar fields to be used as 2D coordinates.
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkPointSet"/>
        </DataTypeDomain>
        <InputArrayDomain name="input_array" attribute_type="point" number_of_components="1" />
        <Documentation>
          Data-set to texture map.
        </Documentation>
      </InputProperty>

      <IntVectorProperty name="UseTextureCoordinates"
                     command="SetUseTextureCoordinates"
                     label="Use Texture Coordinates"
                     number_of_elements="1"
                     default_values="0">
        <BooleanDomain name="bool"/>
      </IntVectorProperty>

      <StringVectorProperty name="UComponent" label="U Component" command="SetInputArrayToProcess" element_types="0 0 0 0 2" number_of_elements="5" default_values="0">
            <ArrayListDomain name="array_list" number_of_components="1">
                <RequiredProperties>
                    <Property function="Input" name="Input" />
                </RequiredProperties>
            </ArrayListDomain>
            <Documentation>U component of the bivariate field.</Documentation>
        </StringVectorProperty>

        <StringVectorProperty name="VComponent" label="V Component" command="SetInputArrayToProcess" element_types="0 0 0 0 2" number_of_elements="5" default_values="1">
            <ArrayListDomain name="array_list" number_of_components="1">
                <RequiredProperties>
                    <Property function="Input" name="Input" />
                </RequiredProperties>
            </ArrayListDomain>
            <Documentation>V component of the bivariate field.</Documentation>
        </StringVectorProperty>

      <PropertyGroup panel_widget="Line" label="Input options">
        <Property name="UseTextureCoordinates" />
        <Property name="UComponent" />
        <Property name="VComponent" />
      </PropertyGroup>

      ${DEBUG_WIDGETS}

      <Hints>
        <ShowInMenu category="TTK - Misc" />
      </Hints>

   </SourceProxy>
 </ProxyGroup>
</ServerManagerConfiguration>
